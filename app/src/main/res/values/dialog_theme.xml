<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="default_background_dim_amount">0.42</dimen>

    <style name="ThemeOverlay.AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="materialAlertDialogBodyTextStyle">@style/ThemeOverlay.AppTheme.Dialog.Body
        </item>
        <item name="materialAlertDialogTitleTextStyle">@style/ThemeOverlay.AppTheme.Dialog.Title
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/ThemeOverlay.AppTheme.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeOverlay.AppTheme.Dialog.Button</item>
        <item name="android:backgroundDimAmount">@dimen/default_background_dim_amount</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dialog.Body" type="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>
</resources>